<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lijunjie.tmall.dao.OrderItemMapper">
	<insert id="addCart">
		insert into orderitem values(null,#{product.id},-1,#{user.id},#{number})
	</insert>
	<!-- 添加之前先查购物车中有没有商品，有了数量加一，没了直接加入 -->
	<select id="queryCartProductByPidAndUid" resultType="orderitem">
	select * from orderitem where pid = #{param1} and uid = #{param2} and oid =-1
	</select>
	<update id="updateInCartProductNumber">
		update orderitem set number = #{number} where pid = #{product.id} and uid = #{user.id}  and oid =-1 
	</update>
	<select id="queryCartProductNumber"  resultType="integer">
		select sum(number) from orderitem where  uid = #{id} and oid =-1 
	</select>
	
	
	
	
	<!-- 查询购物车 -->
	<select id="queryCartByUid" resultMap="OrderItemBean">
		select *from OrderItem where uid = #{uid} and oid = -1
	</select>
	
	<resultMap type="OrderItem" id="OrderItemBean">
		<id property="id" column="id"/>
		<association property="product" column="pid" select="com.lijunjie.tmall.dao.ProductMapper.queryProductById"></association>
	
	</resultMap>
	<!-- 查出订单对应的商品 -->
	<select id="queryOrderItemByOid" resultMap="OrderItemBean">
	select * from orderitem where oid = #{oid}
	</select>
<!-- 结算后通过id查询出要结算的物品详情 -->
	<select id="queryOrderItemByOIid" resultMap="OrderItemBean">
		select* from OrderItem where id = #{oiId}
	</select>
	
	<!--把购物车里的商品转换为订单  -->
	<update id="updateOid">
	update orderitem set oid = #{order.id} where id = #{id}
	</update>
	<!--直接下单  -->
	<insert id="addOrderitem">
	insert into orderitem values(null,#{product.id},#{order.id},#{order.user.id},#{number})
	</insert>
	
	
	
	<!-- 后台 -->
	 <resultMap id="BaseResultMap" type="com.lijunjie.tmall.bean.OrderItem">
    <id column="id" jdbcType="INTEGER" property="id" />
   
    <result column="number" jdbcType="INTEGER" property="number" />
    <association property="product" column="pid" select="com.lijunjie.tmall.dao.ProductMapper.queryProductById"></association>
    <association property="order" column="oid" select="com.lijunjie.tmall.dao.OrderMapper.queryOrderByOid"></association>
    <association property="user" column="uid" select="com.lijunjie.tmall.dao.UserMapper.queryUserByUid"></association>
  </resultMap>
  <sql id="Example_Where_Clause">
    <where>
      <foreach collection="oredCriteria" item="criteria" separator="or">
        <if test="criteria.valid">
          <trim prefix="(" prefixOverrides="and" suffix=")">
            <foreach collection="criteria.criteria" item="criterion">
              <choose>
                <when test="criterion.noValue">
                  and ${criterion.condition}
                </when>
                <when test="criterion.singleValue">
                  and ${criterion.condition} #{criterion.value}
                </when>
                <when test="criterion.betweenValue">
                  and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
                </when>
                <when test="criterion.listValue">
                  and ${criterion.condition}
                  <foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
                    #{listItem}
                  </foreach>
                </when>
              </choose>
            </foreach>
          </trim>
        </if>
      </foreach>
    </where>
  </sql>
  <sql id="Base_Column_List">
    id, pid, oid, uid, number
  </sql>
  <select id="selectByExample" parameterType="com.lijunjie.tmall.bean.OrderItemExample" resultMap="BaseResultMap">
    select
    <if test="distinct">
      distinct
    </if>
    'false' as QUERYID,
    <include refid="Base_Column_List" />
    from orderitem
    <if test="_parameter != null">
      <include refid="Example_Where_Clause" />
    </if>
    <if test="orderByClause != null">
      order by ${orderByClause}
    </if>
  </select>
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from orderitem
    where id = #{id,jdbcType=INTEGER}
  </select>
  <delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
    delete from orderitem
    where id = #{id,jdbcType=INTEGER}
  </delete>
  <insert id="insert" keyColumn="id" keyProperty="id" parameterType="com.lijunjie.tmall.bean.OrderItem" useGeneratedKeys="true">
    insert into orderitem (pid, oid, uid, 
      number)
    values (#{product.id,jdbcType=INTEGER}, #{order.id,jdbcType=INTEGER}, #{user.id,jdbcType=INTEGER}, 
      #{number,jdbcType=INTEGER})
  </insert>
  <insert id="insertSelective" keyColumn="id" keyProperty="id" parameterType="com.lijunjie.tmall.bean.OrderItem" useGeneratedKeys="true">
    insert into orderitem
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="pid != null">
        pid,
      </if>
      <if test="oid != null">
        oid,
      </if>
      <if test="uid != null">
        uid,
      </if>
      <if test="number != null">
        number,
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="product.id != null">
        #{product.id,jdbcType=INTEGER},
      </if>
      <if test="order.id != null">
        #{order.id,jdbcType=INTEGER},
      </if>
      <if test="user.id != null">
        #{user.id,jdbcType=INTEGER},
      </if>
      <if test="number != null">
        #{number,jdbcType=INTEGER},
      </if>
    </trim>
  </insert>
  <update id="updateByPrimaryKeySelective" parameterType="com.lijunjie.tmall.bean.OrderItem">
    update orderitem
    <set>
      <if test="pid != null">
        pid = #{pid,jdbcType=INTEGER},
      </if>
      <if test="oid != null">
        oid = #{oid,jdbcType=INTEGER},
      </if>
      <if test="uid != null">
        uid = #{uid,jdbcType=INTEGER},
      </if>
      <if test="number != null">
        number = #{number,jdbcType=INTEGER},
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.lijunjie.tmall.bean.OrderItem">
    update orderitem
    set pid = #{product.id,jdbcType=INTEGER},
      oid = #{order.id,jdbcType=INTEGER},
      uid = #{user.id,jdbcType=INTEGER},
      number = #{number,jdbcType=INTEGER}
    where id = #{id,jdbcType=INTEGER}
  </update>
	
</mapper>