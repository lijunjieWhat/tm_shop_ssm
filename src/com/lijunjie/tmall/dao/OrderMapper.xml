		select * from order_ where id = #{oid}
	</select>

	<insert id="addOrder" keyProperty="id" useGeneratedKeys="true">
		insert into order_
		values(null,#{orderCode},#{address},#{post},#{receiver},#{mobile},#{userMessage},#{createDate},#{payDate},#{deliveryDate},#{confirmDate},#{user.id},#{status},#{total})
	</insert>

	<update id="updateOrderByOid">
		update order_ 
		<set>
		<if test="address!=null and !&quot;&quot;.equals(address)">
			address = #{address},
		</if>

		<if test="post!=null and !&quot;&quot;.equals(post)">
			post = #{post},
		</if>

		<if test="receiver!=null and !&quot;&quot;.equals(receiver)">
			receiver = #{receiver},
		</if>

		<if test="mobile!=null and !&quot;&quot;.equals(mobile)">
			mobile = #{mobile},
		</if>

		<if test="payDate!=null and !&quot;&quot;payDate.equals()">
			payDate = #{payDate},
		</if>
		<if
			test="deliveryDate!=null and !&quot;&quot;.equals(deliveryDate)">
			deliveryDate = #{deliveryDate},
		</if>
		<if test="confirmDate!=null and !&quot;&quot;.equals(confirmDate)">
			confirmDate = #{confirmDate},
		</if>
		<if test="status!=null and !&quot;&quot;.equals(status)">
			status = #{status},
		</if>
	</set>
	where id =#{id}
	</update>
	
<select id="queryUserAllOrders" resultMap="orderBean">
		select * from order_ where uid = #{param1.id} and status !=#{param2}  order by createdate desc 		
</select>

